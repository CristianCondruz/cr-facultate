{% extends "FOSUserBundle::layout.html.twig" %}

{% block fos_user_content %}
  {% trans_default_domain 'FOSUserBundle' %}
  
  <h1>Inregistrare studenti</h1>
  
  <form action="{{ path('student_registration') }}" method="POST" class="form-inline">
  
  
  
    <div class="form-group row">
      {{ form_label(form.nume, null, {'label_attr': {'class': 'col-sm-2'}}) }}
      <div class="col-sm-10">
        {{ form_widget(form.nume) }}
      </div>
    </div>
  
    <div class="form-group row">
      {{ form_label(form.prenume, null, {'label_attr': {'class': 'col-sm-2'}}) }}
      <div class="col-sm-10">
        {{ form_widget(form.prenume) }}
      </div>
    </div>
    
    <div>
      <button type="submit" class="btn btn-primary">Register</button>
    </div>
  </form>
{% endblock fos_user_content %}